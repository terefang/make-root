<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>parent</artifactId>
        <groupId>terefang.makeroot</groupId>
        <version>2021.1.0</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>terefang.makeroot.muslsys</groupId>
    <artifactId>ncurses</artifactId>
    <version>6.1</version>
    <packaging>pom</packaging>

    <properties>
        <ncurses.revision>20180224</ncurses.revision>
        <ncurses.archive>${project.artifactId}-${project.version}.tar.gz</ncurses.archive>
        <ncurses.tag>${project.artifactId}-${project.version}</ncurses.tag>
        <ncurses.url>https://invisible-mirror.net/archives/ncurses/ncurses-${project.version}.tar.gz</ncurses.url>
        <terminfo.url>https://invisible-island.net/datafiles/current/terminfo.src.gz</terminfo.url>
        <termcap.url>https://invisible-island.net/datafiles/current/termcap.src.gz</termcap.url>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <inherited>false</inherited>
                <dependencies>
                    <dependency>
                        <groupId>org.redline-rpm</groupId>
                        <artifactId>redline</artifactId>
                        <version>1.2.9</version>
                        <classifier>jar-with-dependencies</classifier>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-compress</artifactId>
                        <version>1.5</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>ant</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target xmlns:if="ant:if" xmlns:unless="ant:unless">
                                <taskdef classname="org.redline_rpm.ant.RedlineTask" name="xrpm" />
                                <taskdef classname="org.apache.ant.compress.taskdefs.Cpio" name="cpio" />

                                <mkdir dir="${root.dir}"/>
                                <mkdir dir="${toolchain.dir}"/>
                                <mkdir dir="${project.basedir}/src/main/dist"/>
                                <mkdir dir="${resources.target}"/>

                                <condition property="archive.exists">
                                    <resourceexists>
                                        <file file="${project.basedir}/src/main/dist/${ncurses.archive}"/>
                                    </resourceexists>
                                </condition>

                                <condition property="final.exists">
                                    <resourceexists>
                                        <file file="${resources.target}/muslsys-${ncurses.tag}.tgz"/>
                                    </resourceexists>
                                </condition>

                                <get unless:true="${archive.exists}" src="${ncurses.url}" dest="${project.basedir}/src/main/dist/${ncurses.archive}"/>
                                <get unless:true="${archive.exists}" src="${termcap.url}" dest="${project.basedir}/src/main/dist/"/>
                                <get unless:true="${archive.exists}" src="${terminfo.url}" dest="${project.basedir}/src/main/dist/"/>

                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}" executable="tar">
                                    <arg line="-xvf ${project.basedir}/src/main/dist/${ncurses.archive}" />
                                </exec>

                                <exec unless:true="${final.exists}" dir="${toolchain.dir}" executable="tar">
                                    <arg line="-xvf ${resources.target}/gcc-10-x86_64-linux-musl-native.tar.gz" />
                                </exec>

                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${ncurses.tag}" executable="gzip"
                                      output="${project.build.directory}/${project.artifactId}/${ncurses.tag}/terminfo.src">
                                    <arg line="-dc ${project.basedir}/src/main/dist/terminfo.src.gz" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${ncurses.tag}" executable="configure" resolveexecutable="true">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg value="--prefix=/usr" />
                                    <arg value="--host=x86_64-linux-musl" />
                                    <arg value="--target=x86_64-linux-musl" />
                                    <arg value="--with-ticlib=tic" />
                                    <arg value="--with-termlib=tinfo" />
                                    <arg value="--enable-colorfgbg" />
                                    <arg value="--enable-hard-tabs" />
                                    <arg value="--enable-overwrite" />
                                    <arg value="--enable-xmc-glitch" />
                                    <arg value="--disable-stripping" />
                                    <arg value="--disable-wattr-macros" />
                                    <arg value="--with-cxx-shared" />
                                    <arg value="--with-ospeed=unsigned" />
                                    <arg value="--with-chtype=long" />
                                    <arg value="--disable-termcap" />
                                    <arg value="--with-xterm-kbs=DEL" />
                                    <arg value="--without-ada" />
                                    <arg value="--with-pc-files" />
                                    <arg value="--with-pkg-config-libdir=/usr/lib/pkgconfig" />
                                    <arg value="--with-database=${project.build.directory}/${project.artifactId}/${ncurses.tag}/terminfo.src" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${ncurses.tag}" executable="make">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg line="-j 8" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${ncurses.tag}" executable="make">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg line="-j 1 DESTDIR=${root.dir} install.data" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${ncurses.tag}" executable="make">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg line="-j 1 DESTDIR=${root.dir} install.libs" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${ncurses.tag}" executable="make">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg line="-j 1 DESTDIR=${root.dir} install" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${root.dir}/usr" executable="tar">
                                    <arg line="-cvf ${resources.target}/muslsys-${ncurses.tag}.tgz bin include lib share/terminfo" />
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>