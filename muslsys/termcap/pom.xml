<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>parent</artifactId>
        <groupId>terefang.makeroot</groupId>
        <version>2021.1.0</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>terefang.makeroot.muslsys</groupId>
    <artifactId>termcap</artifactId>
    <version>1.3.1</version>
    <packaging>pom</packaging>

    <properties>
        <termcap.archive>${project.artifactId}-${project.version}.tar.gz</termcap.archive>
        <termcap.tag>${project.artifactId}-${project.version}</termcap.tag>
        <termcap.url>https://ftp.gnu.org/gnu/termcap/${termcap.archive}</termcap.url>
        <termcapdb.url>https://invisible-island.net/datafiles/current/termcap.src.gz</termcapdb.url>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.8</version>
                <inherited>false</inherited>
                <dependencies>
                    <dependency>
                        <groupId>org.redline-rpm</groupId>
                        <artifactId>redline</artifactId>
                        <version>1.2.9</version>
                        <classifier>jar-with-dependencies</classifier>
                    </dependency>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-compress</artifactId>
                        <version>1.5</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>ant</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <target xmlns:if="ant:if" xmlns:unless="ant:unless">
                                <taskdef classname="org.redline_rpm.ant.RedlineTask" name="xrpm" />
                                <taskdef classname="org.apache.ant.compress.taskdefs.Cpio" name="cpio" />

                                <mkdir dir="${root.dir}"/>
                                <mkdir dir="${toolchain.dir}"/>
                                <mkdir dir="${project.basedir}/src/main/dist"/>
                                <mkdir dir="${resources.target}"/>

                                <condition property="archive.exists">
                                    <resourceexists>
                                        <file file="${project.basedir}/src/main/dist/${termcap.archive}"/>
                                    </resourceexists>
                                </condition>

                                <condition property="final.exists">
                                    <resourceexists>
                                        <file file="${resources.target}/muslsys-${termcap.tag}.tgz"/>
                                    </resourceexists>
                                </condition>

                                <get unless:true="${archive.exists}" src="${termcap.url}" dest="${project.basedir}/src/main/dist/${termcap.archive}"/>
                                <get unless:true="${archive.exists}" src="${termcapdb.url}" dest="${project.basedir}/src/main/dist/"/>

                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}" executable="tar">
                                    <arg line="-xvf ${project.basedir}/src/main/dist/${termcap.archive}" />
                                </exec>

                                <exec unless:true="${final.exists}" dir="${toolchain.dir}" executable="tar">
                                    <arg line="-xvf ${resources.target}/gcc-10-x86_64-linux-musl-native.tar.gz" />
                                </exec>

                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="gzip"
                                    output="${project.build.directory}/${project.artifactId}/${termcap.tag}/termcap.src">
                                    <arg line="-dc ${project.basedir}/src/main/dist/termcap.src.gz" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="configure" resolveexecutable="true">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg value="--prefix=/usr" />
                                    <arg value="--host=x86_64-linux-musl" />
                                    <arg value="--target=x86_64-linux-musl" />
                                    <arg value="--enable-install-termcap" />
                                    <arg value="--with-termcap=/usr/share/misc/termcap" />
                                </exec>

                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="make">
                                    <env key="PATH" value="${env.PATH}:${toolchain.dir}/bin" />
                                    <arg line="-j 8" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="mkdir">
                                    <arg line="-p ${root.dir}/usr/include/ ${root.dir}/usr/lib/ ${root.dir}/usr/share/misc/" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="install">
                                    <arg line="-c -m 664 termcap.h ${root.dir}/usr/include/termcap.h" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="install">
                                    <arg line="-c -m 664 libtermcap.a ${root.dir}/usr/lib/libtermcap.a" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${project.build.directory}/${project.artifactId}/${termcap.tag}" executable="install">
                                    <arg line="-c -m 664 termcap.src ${root.dir}/usr/share/misc/termcap" />
                                </exec>
                                <exec unless:true="${final.exists}" dir="${root.dir}/usr" executable="tar">
                                    <arg line="-cvf ${resources.target}/muslsys-${termcap.tag}.tgz include lib share" />
                                </exec>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>